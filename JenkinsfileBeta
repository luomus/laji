node {
   nvm('v10.17.0') {
     stage('Prepare environment') {
      git branch: 'development', url: 'https://bitbucket.org/luomus/laji.fi-front.git'
      sh 'npm ci'
    }
    stage('Build beta') {
      milestone()
      sh 'rm -rf dist'
      sh 'npm run --silent build:ssr:beta'
      sh 'npm run --silent build:beta'
      sh 'pre-compress-web-assets dist/browser'
      sh 'tar -cvzf beta.tar.gz --strip-components=1 dist'
    }
    stage('Archive') {
      milestone()
      archive 'beta.tar.gz'
    }
  }
}
